{
    "manifest_version": 2,
    "name": "Tab Counter",
    "version": "1.1",
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/Solarflame5/firefox-tab-counter/master/updates.json"
        }
    },
    
    "icons": {
        "48": "icons/tab_dark.svg",
        "96": "icons/tab_dark.svg"
    },
      
    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_icon": "icons/tab_light.svg",
        "default_title": "Tab Count",

        "theme_icons": [{
            "light": "icons/tab_light.svg",
            "dark": "icons/tab_dark.svg",
            "size": 16
        }, {
            "light": "icons/tab_light.svg",
            "dark": "icons/tab_dark.svg",
            "size": 32
        }, {
            "light": "icons/tab_light.svg",
            "dark": "icons/tab_dark.svg",
            "size": 64
        }]
    },

    "background": {
        "scripts": ["count.js"],
        "persistent": false
    }
}