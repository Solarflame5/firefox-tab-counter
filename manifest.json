{
    "manifest_version": 2,
    "name": "Tab Counter",
    "version": "1.2",
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/Solarflame5/firefox-tab-counter/master/updates.json"
        }
    },
    
    "icons": {
        "48": "icons/tab_number.svg#default-bright",
        "96": "icons/tab_number.svg#default-bright"
    },
      
    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_title": "Tab Count",
        "default_icon": {
            "16": "icons/tab.svg#toolbar-bright",
            "20": "icons/tab.svg#toolbar-bright",
            "24": "icons/tab.svg#toolbar-bright",
            "32": "icons/tab.svg#toolbar-bright"
        }
    },

    "background": {
        "scripts": ["count.js"],
        "persistent": false
    }
}